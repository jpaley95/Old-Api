################################################################################
# Rails gems
#
################################################################################

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails'

# Specify version of rack to use (workaround for a bug)
# Read more: http://stackoverflow.com/questions/30925008/just-installed-rails-on-yosemite-and-rails-server-fails
gem 'rack', '1.6.1'

# Enable CORS on Rack (Enable cross-domain scripting)
gem 'rack-cors'

# Use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# Use unicorn or puma as the HTTP server
# gem 'unicorn'
# gem 'puma'

# Asset pipeline manager
gem 'sprockets'

# User authentication and management
gem 'devise'
# gem 'cancancan'

# File uploading
gem 'paperclip', '>= 4.0'

# Support for setting local environment variables in config/application.yml
gem 'figaro'

# Include responders gem for respond_with()
gem 'responders'

# ActsAs for Multiple Table Inheritance (MTI)
gem 'active_record-acts_as'

# Active Model Serializers for turning records into Ember-friendly JSON
gem 'active_model_serializers'




